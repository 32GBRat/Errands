<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="TaskList" parent="AdwBin">
    <child>
      <object class="AdwToolbarView">

        <!-- Headerbar -->
        <child type="top">
          <object class="AdwHeaderBar">

            <!-- Title -->
            <property name="title-widget">
              <object id="title" class="AdwWindowTitle" />
            </property>

            <!-- Delete Completed btn -->
            <child type="start">
              <object id="delete_completed_btn" class="GtkButton">
                <property name="icon-name">edit-clear-all-symbolic</property>
                <property name="sensitive">false</property>
                <property name="valign">center</property>
                <property name="tooltip-text" translatable="yes">Delete Completed Tasks</property>
                <signal name="clicked" handler="_on_delete_completed_btn_clicked" />
              </object>
            </child>

            <!-- Toggle Completed btn -->
            <child type="start">
              <object id="toggle_completed_btn" class="GtkToggleButton">
                <property name="icon-name">errands-check-toggle-symbolic</property>
                <property name="valign">center</property>
                <property name="tooltip-text" translatable="yes">Toggle Completed Tasks</property>
                <!-- <signal name="toggled" handler="_on_toggle_completed_btn_toggled" /> -->
              </object>
            </child>

            <!-- Scroll up btn -->
            <child type="end">
              <object id="scroll_up_btn" class="GtkButton">
                <property name="icon-name">go-up-symbolic</property>
                <property name="visible">false</property>
                <property name="valign">center</property>
                <property name="tooltip-text" translatable="yes">Scroll Up</property>
                <signal name="clicked" handler="_on_scroll_up_btn_clicked" />
              </object>
            </child>

          </object>
        </child>

        <!-- Content -->
        <property name="content">
          <object class="GtkBox">
            <property name="orientation">vertical</property>

            <!-- Entry -->
            <child>
              <object class="AdwClamp">
                <property name="maximum-size">1000</property>
                <property name="tightening-threshold">300</property>
                <child>
                  <object id="new_task_entry" class="AdwEntryRow">
                    <property name="title" translatable="yes">Add new Task</property>
                    <property name="activatable">false</property>
                    <property name="height-request">60</property>
                    <property name="margin-top">6</property>
                    <property name="margin-bottom">6</property>
                    <property name="margin-end">12</property>
                    <property name="margin-start">12</property>
                    <style>
                      <class name="card" />
                    </style>
                    <signal name="entry-activated" handler="_on_task_added" />
                  </object>
                </child>
              </object>
            </child>

            <!-- Loading Tasks Status Page -->
            <child>
              <object id="loading_status_page" class="AdwStatusPage">
                <property name="title" translatable="yes">Loading Tasks...</property>
                <property name="vexpand">true</property>
                <style>
                  <class name="compact" />
                </style>
              </object>
            </child>

            <!-- Scrolled window-->
            <child>
              <object id="scrl" class="GtkScrolledWindow">
                <property name="propagate-natural-width">true</property>
                <property name="vexpand">true</property>
                <property name="visible">false</property>
                <property name="vadjustment">
                  <object class="GtkAdjustment">
                    <signal name="value-changed" handler="_on_scroll" />
                  </object>
                </property>

                <child>
                  <object class="AdwClamp">
                    <property name="maximum-size">1000</property>
                    <property name="tightening-threshold">300</property>
                    <property name="margin-bottom">32</property>

                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>

                        <!-- Task List Uncompleted -->
                        <child>
                          <object id="uncompleted_tasks_list" class="GtkBox">
                            <property name="orientation">vertical</property>
                          </object>
                        </child>

                        <!-- Task List Completed-->
                        <child>
                          <object id="completed_tasks_list" class="GtkBox">
                            <property name="orientation">vertical</property>
                          </object>
                        </child>

                      </object>
                    </child>


                  </object>
                </child>

                <!-- Drop motion ctrl -->
                <child>
                  <object class="GtkDropControllerMotion">
                    <signal name="motion" handler="_on_dnd_scroll" />
                  </object>
                </child>

              </object>
            </child>

          </object>
        </property>

      </object>
    </child>
  </template>
</interface>