<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="Adw" version="1.0" />
  <template class="ListsPanel" parent="AdwBin">
    <property name="width-request">300</property>
    <property name="height-request">296</property>
    <child>
      <object class="AdwToolbarView">

        <!-- Title -->
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="GtkLabel">
                <property name="label">Errands</property>
                <style>
                  <class name="heading" />
                </style>
              </object>
            </property>
          </object>
        </child>

        <!-- Lists -->
        <property name="content">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="spacing">12</property>

            <!-- Add new list entry -->
            <child>
              <object class="GtkEntry">
                <property name="placeholder-text" translatable="yes">Add new List</property>
              </object>
            </child>

            <child>
              <object class="GtkListBox" id="lists">
                <style>
                  <class name="navigation-sidebar" />
                </style>
              </object>
            </child>


          </object>
        </property>

      </object>
    </child>
  </template>


</interface>