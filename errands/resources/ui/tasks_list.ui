<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="Adw" version="1.0" />
  <template class="TasksList" parent="AdwBin">
    <child>
      <object class="AdwBreakpointBin">
        <property name="width-request">360</property>
        <property name="height-request">296</property>
        <child>
          <object class="AdwBreakpoint">
            <condition>max-width: 720px</condition>
            <setter object="split_view" property="collapsed">true</setter>
            <setter object="split_view" property="sidebar-position">end</setter>
          </object>
        </child>
        <child>
          <object class="AdwOverlaySplitView" id="split_view">
            <property name="show-sidebar" bind-source="toggle_details_btn" bind-property="active" bind-flags="sync-create|bidirectional" />

            <!-- Task details panel -->
            <property name="sidebar">
              <object class="AdwToolbarView">

                <!-- Stack -->
                <property name="content">
                  <object class="AdwViewStack" id="stack">

                    <!-- Trash panel -->
                    <child>
                      <object class="AdwViewStackPage">
                        <property name="name">trash</property>
                        <property name="title">Trash</property>
                        <property name="icon-name">user-trash-symbolic</property>
                        <property name="child">
                          <object class="TrashPanel" id="trash_panel" />
                        </property>
                      </object>
                    </child>

                    <!-- Details panel -->
                    <child>
                      <object class="AdwViewStackPage">
                        <property name="name">details</property>
                        <property name="title">Details</property>
                        <property name="icon-name">help-about-symbolic</property>
                        <property name="child">
                          <object class="TaskDetails" id="task_details" />
                        </property>
                      </object>
                    </child>

                  </object>
                </property>

                <!-- Stack switcher -->
                <child type="bottom">
                  <object class="AdwViewSwitcherBar">
                    <property name="stack">stack</property>
                    <property name="reveal">true</property>
                  </object>
                </child>
              </object>

            </property>

            <!-- Tasks list content panel -->
            <property name="content">
              <object class="AdwToolbarView">

                <!-- Headerbar -->
                <child type="top">
                  <object class="AdwHeaderBar">
                    <property name="title-widget">
                      <object class="AdwWindowTitle" id="title">
                        <property name="title">Errands</property>
                      </object>
                    </property>

                    <!-- Toggle details button-->
                    <child type="end">
                      <object class="GtkToggleButton" id="toggle_details_btn">
                        <property name="visible" bind-source="split_view" bind-property="collapsed" bind-flags="sync-create" />
                        <property name="icon-name">sidebar-show-right-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Toggle Details</property>
                        <accessibility>
                          <property name="label" translatable="yes">Toggle Details</property>
                        </accessibility>
                      </object>
                    </child>

                    <!-- Delete completed tasks button -->
                    <child type="start">
                      <object class="GtkRevealer" id="delete_completed_tasks_btn">
                        <property name="valign">end</property>
                        <property name="halign">end</property>
                        <property name="transition-type">2</property>
                        <child>
                          <object class="GtkButton">
                            <property name="valign">center</property>
                            <property name="icon-name">edit-clear-all-symbolic</property>
                            <property name="tooltip-text" translatable="yes">Delete Completed Tasks (Ctrl+Delete)</property>
                            <signal name="clicked" handler="on_delete_completed_tasks_btn_clicked" />
                            <accessibility>
                              <property name="label" translatable="yes">Delete Completed Tasks (Ctrl+Delete)</property>
                            </accessibility>
                            <child>
                              <object class="GtkShortcutController">
                                <property name="scope">managed</property>
                                <child>
                                  <object class="GtkShortcut">
                                    <property name="trigger">&lt;Control&gt;Delete</property>
                                    <property name="action">activate</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Sync button -->
                    <child type="end">
                      <object class="GtkButton" id="sync_btn">
                        <property name="icon-name">emblem-synchronizing-symbolic</property>
                        <property name="visible">false</property>
                        <property name="tooltip-text" translatable="yes">Sync/Fetch Tasks (Ctrl+S)</property>
                        <signal name="clicked" handler="on_sync_btn_clicked" />
                        <accessibility>
                          <property name="label" translatable="yes">Sync/Fetch Tasks (Ctrl+S)</property>
                        </accessibility>
                        <child>
                          <object class="GtkShortcutController">
                            <property name="scope">managed</property>
                            <child>
                              <object class="GtkShortcut">
                                <property name="trigger">&lt;Control&gt;s</property>
                                <property name="action">activate</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Scroll up button -->
                    <child type="end">
                      <object class="GtkRevealer" id="scroll_up_btn_rev">
                        <property name="transition-type">3</property>
                        <child>
                          <object class="GtkButton">
                            <property name="valign">end</property>
                            <property name="icon-name">go-up-symbolic</property>
                            <property name="tooltip-text" translatable="yes">Scroll Up</property>
                            <signal name="clicked" handler="on_scroll_up_btn_clicked" />
                            <accessibility>
                              <property name="label" translatable="yes">Scroll Up</property>
                            </accessibility>
                          </object>
                        </child>
                      </object>
                    </child>

                  </object>
                </child>

                <!-- Content -->
                <property name="content">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>

                    <!-- Entry -->
                    <child>
                      <object class="AdwClamp">
                        <property name="maximum-size">850</property>
                        <property name="tightening-threshold">300</property>
                        <child>
                          <object class="GtkListBox">
                            <property name="margin-top">10</property>
                            <property name="margin-bottom">12</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="selection-mode">0</property>
                            <style>
                              <class name="boxed-list" />
                            </style>
                            <child>
                              <object class="AdwEntryRow" id="task_entry_row">
                                <property name="activatable">false</property>
                                <property name="height-request">60</property>
                                <property name="title" translatable="yes">Add new Task</property>
                                <signal name="entry-activated" handler="on_task_added" />
                              </object>
                            </child>
                          </object>
                        </child>

                      </object>
                    </child>

                    <!-- Scrolled window -->
                    <child>
                      <object class="GtkScrolledWindow" id="scrolled_window">
                        <property name="propagate-natural-height">true</property>
                        <property name="propagate-natural-width">true</property>
                        <property name="vadjustment">
                          <object class="GtkAdjustment">
                            <signal name="value_changed" handler="on_scroll" />
                          </object>
                        </property>

                        <!-- Drag and Drop scroll controller -->
                        <child>
                          <object class="GtkDropControllerMotion" id="drop_motion_ctrl">
                            <signal name="motion" handler="on_dnd_scroll" />
                          </object>
                        </child>

                        <!-- Tasks list -->
                        <child>
                          <object class="AdwClamp">
                            <property name="maximum-size">850</property>
                            <property name="tightening-threshold">300</property>
                            <property name="vexpand">true</property>
                            <child>
                              <object class="GtkBox" id="tasks_list">
                                <property name="orientation">vertical</property>
                                <property name="hexpand">true</property>
                                <property name="margin-bottom">18</property>
                                <style>
                                  <class name="tasks-list" />
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>

                      </object>
                    </child>

                  </object>
                </property>

              </object>
            </property>

          </object>
        </child>
        <child>

        </child>
      </object>
    </child>

  </template>
</interface>