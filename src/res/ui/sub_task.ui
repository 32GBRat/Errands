<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="SubTask" parent="AdwBin">
    <style>
      <class name="sub-task"/>
    </style>
    <child>
      <object class="GtkBox">
        <style>
          <class name="toolbar"/>
        </style>
        <!-- Menu -->
        <child>
          <object class="GtkMenuButton">
            <property name="icon-name">view-more-symbolic</property>
            <property name="menu-model">sub_task_menu</property>
          </object>
        </child>
        <!-- Sub-task text -->
        <child>
          <object class="GtkLabel" id="sub_task_text">
            <property name="wrap">true</property>
            <property name="wrap-mode">2</property>
            <property name="hexpand">true</property>
            <property name="halign">start</property>
            <property name="valign">center</property>
            <property name="selectable">true</property>
            <property name="use-markup">true</property>
          </object>
        </child>
        <!-- Edit entry -->
        <child>
          <object class="GtkEntry" id="sub_task_edit_entry">
            <property name="hexpand">true</property>
            <property name="visible">false</property>
            <signal name="activate" handler="on_sub_task_edit"/>
          </object>
        </child>
        <!-- Cancel edit button -->
        <child>
          <object class="GtkButton" id="sub_task_cancel_edit_btn">
            <property name="icon-name">edit-delete-symbolic</property>
            <property name="tooltip-text" translatable="yes">Cancel</property>
            <property name="visible">false</property>
            <signal name="clicked" handler="on_sub_task_cancel_edit_btn_clicked"/>
          </object>
        </child>
        <!-- Mark as completed button -->
        <child>
          <object class="GtkCheckButton" id="sub_task_completed_btn">
            <property name="valign">center</property>
            <property name="tooltip-text" translatable="yes">Mark as completed</property>
            <signal name="toggled" handler="on_completed_btn_toggled"/>
          </object>
        </child>
      </object>
    </child>
  </template>
  <!-- Menu -->
  <menu id="sub_task_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Delete</attribute>
        <attribute name="action">sub_task.delete</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Edit</attribute>
        <attribute name="action">sub_task.edit</attribute>
      </item>
    </section>
  </menu>
</interface>
