<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="SubTask" parent="GtkBox">
    <property name="orientation">horizontal</property>
    <style>
      <class name="sub-task"/>
    </style>
    <!-- Menu button -->
    <child>
      <object class="GtkMenuButton" id="sub_task_menu">
        <property name="icon-name">view-more-symbolic</property>
        <property name="valign">center</property>
        <property name="tooltip-text">Sub-task menu</property>
        <style>
          <class name="flat"/>
        </style>
        <!-- Menu popover -->
        <property name="popover">
          <object class="GtkPopover" id="sub_task_popover">
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">10</property>
                <!-- First row -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="halign">center</property>
                    <style>
                      <class name="toolbar"/>
                    </style>
                    <!-- Delete sub-task button -->
                    <child>
                      <object class="GtkButton">
                        <property name="icon-name">user-trash-symbolic</property>
                        <property name="tooltip-text">Delete sub-task</property>
                        <signal name="clicked" handler="on_sub_task_delete"/>
                        <style>
                          <class name="destructive-action"/>
                        </style>
                      </object>
                    </child>
                    <!-- Edit entry -->
                    <child>
                      <object class="GtkEntry">
                        <property name="placeholder-text">Edit sub-task</property>
                        <property name="hexpand">true</property>
                        <signal name="activate" handler="on_sub_task_edit"/>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </child>
    <!-- Sub-task text -->
    <child>
      <object class="GtkLabel" id="sub_task_text">
        <property name="margin-start">10</property>
        <property name="margin-end">10</property>
        <property name="wrap">true</property>
        <property name="wrap-mode">1</property>
        <property name="hexpand">true</property>
        <property name="halign">start</property>
        <property name="valign">center</property>
        <property name="selectable">true</property>
        <property name="use-markup">true</property>
      </object>
    </child>
    <!-- Mark as completed button -->
    <child>
      <object class="GtkCheckButton" id="sub_task_completed_btn">
        <property name="valign">center</property>
        <property name="tooltip-text" translatable="yes">Mark as completed</property>
        <signal name="toggled" handler="on_completed_btn_toggled"/>
      </object>
    </child>
  </template>
</interface>
