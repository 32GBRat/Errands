<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Task" parent="GtkRevealer">
    <child>
      <object class="GtkBox" id="main_box">
        <property name="margin-top">10</property>
        <property name="margin-bottom">10</property>
        <property name="margin-start">5</property>
        <property name="margin-end">5</property>
        <property name="orientation">vertical</property>
        <property name="hexpand">true</property>
        <style>
          <class name="card"/>
          <class name="task"/>
        </style>
        <!-- Horizontal box -->
        <child>
          <object class="GtkOverlay">
            <!-- Status bar -->
            <child type="overlay">
              <object class="GtkProgressBar" id="task_status">
                <property name="margin-start">10</property>
                <property name="margin-end">10</property>
                <property name="valign">end</property>
                <style>
                  <class name="osd"/>
                  <class name="task-progressbar"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="hexpand">true</property>
                <property name="orientation">vertical</property>
                <property name="height-request">60</property>
                <property name="spacing">5</property>
                <property name="vexpand">false</property>
                <!-- Task box -->
                <child>
                  <object class="GtkBox" id="task_box">
                    <property name="margin-start">10</property>
                    <property name="margin-end">10</property>
                    <property name="spacing">5</property>
                    <property name="vexpand">true</property>
                    <property name="valign">center</property>
                    <!-- Delete task button -->
                    <child>
                      <object class="GtkButton" id="task_delete_btn">
                        <property name="icon-name">user-trash-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Delete</property>
                        <property name="valign">center</property>
                        <signal name="clicked" handler="on_task_delete"/>
                        <accessibility>
                          <property name="label" translatable="yes">Delete</property>
                        </accessibility>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                    <!-- Task text -->
                    <child>
                      <object class="GtkLabel" id="task_text">
                        <property name="wrap">true</property>
                        <property name="wrap-mode">2</property>
                        <property name="selectable">true</property>
                        <property name="use-markup">true</property>
                        <property name="halign">start</property>
                        <property name="hexpand">true</property>
                      </object>
                    </child>
                    <!-- Expand button -->
                    <child>
                      <object class="GtkButton" id="expand_btn">
                        <property name="icon-name">go-down-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Toggle sub-tasks</property>
                        <property name="valign">center</property>
                        <signal name="clicked" handler="on_expand_btn_clicked"/>
                        <accessibility>
                          <property name="label" translatable="yes">Toggle sub-tasks</property>
                        </accessibility>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                    <!-- Accent colors menu button -->
                    <child>
                      <object class="GtkMenuButton" id="accent_colors_btn">
                        <property name="icon-name">view-more-horizontal-symbolic</property>
                        <property name="valign">center</property>
                        <property name="tooltip-text" translatable="yes">Accent color</property>
                        <!-- Menu popover -->
                        <property name="popover">
                          <object class="GtkPopover" id="accent_colors_popover">
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="halign">center</property>
                                <style>
                                  <class name="toolbar"/>
                                </style>
                                <!-- Clear style button -->
                                <child>
                                  <object class="GtkButton">
                                    <property name="icon-name">window-close-symbolic</property>
                                    <property name="tooltip-text" translatable="yes">Clear style</property>
                                    <signal name="clicked" handler="on_style_selected"/>
                                    <accessibility>
                                      <property name="label" translatable="yes">Clear style</property>
                                    </accessibility>
                                    <style>
                                      <class name="circular"/>
                                    </style>
                                  </object>
                                </child>
                                <!-- Blue style button -->
                                <child>
                                  <object class="GtkButton">
                                    <style>
                                      <class name="circular"/>
                                      <class name="btn-blue"/>
                                    </style>
                                    <signal name="clicked" handler="on_style_selected"/>
                                  </object>
                                </child>
                                <!-- Green style button -->
                                <child>
                                  <object class="GtkButton">
                                    <style>
                                      <class name="circular"/>
                                      <class name="btn-green"/>
                                    </style>
                                    <signal name="clicked" handler="on_style_selected"/>
                                  </object>
                                </child>
                                <!-- Yellow style button -->
                                <child>
                                  <object class="GtkButton">
                                    <style>
                                      <class name="circular"/>
                                      <class name="btn-yellow"/>
                                    </style>
                                    <signal name="clicked" handler="on_style_selected"/>
                                  </object>
                                </child>
                                <!-- Orange style button -->
                                <child>
                                  <object class="GtkButton">
                                    <style>
                                      <class name="circular"/>
                                      <class name="btn-orange"/>
                                    </style>
                                    <signal name="clicked" handler="on_style_selected"/>
                                  </object>
                                </child>
                                <!-- Red style button -->
                                <child>
                                  <object class="GtkButton">
                                    <style>
                                      <class name="circular"/>
                                      <class name="btn-red"/>
                                    </style>
                                    <signal name="clicked" handler="on_style_selected"/>
                                  </object>
                                </child>
                                <!-- Purple style button -->
                                <child>
                                  <object class="GtkButton">
                                    <style>
                                      <class name="circular"/>
                                      <class name="btn-purple"/>
                                    </style>
                                    <signal name="clicked" handler="on_style_selected"/>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </property>
                        <accessibility>
                          <property name="label" translatable="yes">Accent color</property>
                        </accessibility>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                    <!-- Edit task button -->
                    <child>
                      <object class="GtkButton" id="task_edit_btn">
                        <property name="icon-name">document-edit-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Edit</property>
                        <property name="valign">center</property>
                        <signal name="clicked" handler="on_task_edit_btn_clicked"/>
                        <accessibility>
                          <property name="label" translatable="yes">Edit</property>
                        </accessibility>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                    <!-- Mark as completed button -->
                    <child>
                      <object class="GtkCheckButton" id="task_completed_btn">
                        <property name="valign">center</property>
                        <property name="tooltip-text" translatable="yes">Mark as completed</property>
                        <signal name="toggled" handler="on_task_completed_btn_toggled"/>
                        <accessibility>
                          <property name="label" translatable="yes">Mark as completed</property>
                        </accessibility>
                      </object>
                    </child>
                  </object>
                </child>
                <!-- Task edit box -->
                <child>
                  <object class="GtkBox" id="task_edit_box">
                    <property name="margin-start">10</property>
                    <property name="margin-end">10</property>
                    <property name="spacing">5</property>
                    <property name="vexpand">true</property>
                    <property name="visible">false</property>
                    <!-- Edit entry -->
                    <child>
                      <object class="GtkEntry" id="task_edit_entry">
                        <property name="valign">center</property>
                        <property name="hexpand">true</property>
                        <signal name="activate" handler="on_task_edit"/>
                      </object>
                    </child>
                    <!-- Move box -->
                    <child>
                      <object class="GtkBox">
                        <style>
                          <class name="linked"/>
                        </style>
                        <!-- Move up button -->
                        <child>
                          <object class="GtkButton" id="task_move_up_btn">
                            <property name="valign">center</property>
                            <property name="icon-name">go-up-symbolic</property>
                            <property name="tooltip-text" translatable="yes">Move up</property>
                            <signal name="clicked" handler="on_task_move_up_btn_clicked"/>
                            <accessibility>
                              <property name="label" translatable="yes">Move up</property>
                            </accessibility>
                          </object>
                        </child>
                        <!-- Move down button -->
                        <child>
                          <object class="GtkButton" id="task_move_down_btn">
                            <property name="valign">center</property>
                            <property name="icon-name">go-down-symbolic</property>
                            <property name="tooltip-text" translatable="yes">Move down</property>
                            <signal name="clicked" handler="on_task_move_down_btn_clicked"/>
                            <accessibility>
                              <property name="label" translatable="yes">Move down</property>
                            </accessibility>
                          </object>
                        </child>
                      </object>
                    </child>
                    <!-- Cancel edit button -->
                    <child>
                      <object class="GtkButton" id="task_cancel_edit_btn">
                        <property name="icon-name">edit-delete-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Cancel</property>
                        <property name="valign">center</property>
                        <signal name="clicked" handler="on_task_cancel_edit_btn_clicked"/>
                        <accessibility>
                          <property name="label" translatable="yes">Cancel</property>
                        </accessibility>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <!-- Sub tasks revealer -->
        <child>
          <object class="GtkRevealer" id="sub_tasks_revealer">
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <!-- Entry -->
                <child>
                  <object class="GtkBox">
                    <property name="margin-top">10</property>
                    <property name="margin-bottom">10</property>
                    <property name="margin-start">10</property>
                    <property name="margin-end">10</property>
                    <!-- Sub task entry -->
                    <child>
                      <object class="GtkEntry">
                        <property name="placeholder-text" translatable="yes">Add new sub-task</property>
                        <property name="hexpand">true</property>
                        <signal name="activate" handler="on_sub_task_added"/>
                      </object>
                    </child>
                    <!-- Delete completed sub-tasks button -->
                    <child>
                      <object class="GtkRevealer" id="delete_completed_btn_revealer">
                        <property name="transition-type">3</property>
                        <child>
                          <object class="GtkButton" id="delete_completed_btn">
                            <property name="margin-start">5</property>
                            <property name="icon-name">edit-clear-all-symbolic</property>
                            <property name="tooltip-text" translatable="yes">Delete completed sub-tasks</property>
                            <property name="valign">center</property>
                            <signal name="clicked" handler="on_delete_completed_btn_clicked"/>
                            <accessibility>
                              <property name="label" translatable="yes">Delete completed sub-tasks</property>
                            </accessibility>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <!-- <child> -->
                <!--   <object class="GtkRevealer"> -->
                <!--   </object> -->
                <!-- </child> -->
                <!-- Sub tasks -->
                <child>
                  <object class="GtkBox" id="sub_tasks">
                    <property name="orientation">vertical</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
